<Window x:Class="StelleVideoCompressorGUI.Pages.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compression Complete" Height="250" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header icon and text -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="🎉" FontSize="24" VerticalAlignment="Center"/>
            <TextBlock Text=" Compression completed successfully!" FontSize="18" Margin="10 0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Output path -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="14" Margin="10 0 0 20">
            📁 Output: <Run x:Name="OutputPathRun" FontWeight="Bold" />
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <!-- <Button Width="80" Margin="5" Click="YesButton_Click">Yes</Button> -->
            <!-- <Button Width="80" Margin="5" Click="NoButton_Click">No</Button> -->
        </StackPanel>
    </Grid>
</Window>